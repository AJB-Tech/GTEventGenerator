<Window x:Class="GTEventGenerator.GameGeneratorWindow"
	    xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
	    Title="Gran Turismo 5/6 Event Editor" Width="960" Height="600"
        ResizeMode="NoResize"
        Loaded="GameGenerator_Load">
    <DockPanel >
        <DockPanel DockPanel.Dock="Top" Background="#f0f0f0">
            <Menu Name="menuStrip1" Height="22" HorizontalAlignment="Stretch">
                <MenuItem Name="toolStripMenuItem1" Header="File">
                    <MenuItem Header="New Folder" Name="newEventToolStripMenuItem" Click="newEventToolStripMenuItem_Click"></MenuItem>
                    <MenuItem Header="Import Folder (GT6)..." Name="importEventToolStripMenuItem" Click="importEventToolStripMenuItem_Click"></MenuItem>
                    <MenuItem Header="Export Folder (GT6)..." Name="exportEventToolStripMenuItem" Click="exportEventToolStripMenuItem_Click"></MenuItem>
                    <Separator />
                    <MenuItem Header="Import Event List (GT5)..." Click="importEventListToolStripMenuItem_Click"></MenuItem>
                    <Separator />
                    <MenuItem Header="Exit" Click="exit_Click"></MenuItem>
                </MenuItem>
                <MenuItem Header="Help">
                    <MenuItem Header="About"></MenuItem>
                </MenuItem>
            </Menu>
            <ComboBox Name="cb_QuickEventPicker" SelectedIndex="0" DockPanel.Dock="Right" Width="340" Height="20" Margin="0,4,4,4" SelectionChanged="cb_QuickEventPicker_SelectionChanged"/>

            <Label DockPanel.Dock="Right" Width="100" Content="Current Event:" HorizontalAlignment="Right" HorizontalContentAlignment="Right" VerticalAlignment="Bottom"/>
        </DockPanel>
        <TabControl DockPanel.Dock="Bottom" Name="tabEvent" TabStripPlacement= "Top" IsTabStop="False" Margin="0,-2,0,0">
            <TabItem Name="tabFolderInfo" Header="Folder Info" >
                <Canvas Name="cantabFolderInfo" >
                    <GroupBox HorizontalAlignment="Right" VerticalAlignment="Bottom" Canvas.Left="10" Canvas.Top="376" Width="221" Height="131" >
                        <GroupBox.Header>
                            <TextBlock Text="Championship Options"/>
                        </GroupBox.Header>
                        <Canvas>
                            <Button Name="btnChampionshipRewards" Height="44" Width="190" TabIndex="6" IsEnabled="False" HorizontalAlignment="Right" VerticalAlignment="Bottom" Canvas.Left="10" Canvas.Top="61" >Set Championship Rewards</Button>
                            <CheckBox Name="chkIsChampionship" Height="19" Width="106" TabIndex="5" HorizontalAlignment="Right" VerticalAlignment="Bottom" Checked="chkIsChampionship_CheckedChanged" Canvas.Left="10" Canvas.Top="25" >Championship</CheckBox>
                        </Canvas>
                    </GroupBox>
                    <Label Name="label6" Height="24" Width="91"  TabIndex="8" Margin="8,189,826,343" HorizontalAlignment="Right" VerticalAlignment="Bottom" 
                           ToolTip="Leave as 0 if you want this folder to be accessable without a total star count.">Stars Needed</Label>
                    <xctk:IntegerUpDown Name="iud_StarsNeeded" ValueChanged="iud_StarsNeeded_ValueChanged" Value="0" Height="20" Width="232" Canvas.Left="121" Canvas.Top="192" Minimum="0" Maximum="1000"/>

                    <TextBox Name="txtGameParamName" Height="20" Width="232" TabIndex="1" TextChanged="txtEventsName_TextChanged" HorizontalAlignment="Right" VerticalAlignment="Bottom" TextWrapping="Wrap" Canvas.Left="121" Canvas.Top="35" />
                    <TextBox Name="txtGameParamDesc" Height="92" Width="232" TabIndex="2" TextChanged="txtEventsDesc_TextChanged" HorizontalAlignment="Right" VerticalAlignment="Bottom" TextWrapping="Wrap" Canvas.Left="121" Canvas.Top="60" />
                    <Label Name="label5" Height="24" Width="108"  TabIndex="5" HorizontalAlignment="Right" VerticalAlignment="Bottom" Canvas.Left="8" Canvas.Top="60" >Folder Description</Label>
                    <Label Name="label4" Height="24" Width="108"  TabIndex="4" HorizontalAlignment="Right" VerticalAlignment="Bottom" Canvas.Left="8" Canvas.Top="33" >Folder Name</Label>
                    <Label Name="label3" Height="27" Width="108" TabIndex="3" HorizontalAlignment="Right" VerticalAlignment="Bottom" Canvas.Left="8" Canvas.Top="157" >Folder Category</Label>
                    <ComboBox Name="cboEventCategory" Height="23" Width="232" TabIndex="3" Margin="121,157,572,376" HorizontalAlignment="Right" VerticalAlignment="Bottom" SelectionChanged="cboEventCategory_SelectedIndexChanged" />
                    <Button Name="btnEventGenerate" Height="43" Width="137" TabIndex="8" Click="btnEventGenerate_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom" Canvas.Left="659" Canvas.Top="464" >Generate Event</Button>
                    <Button Name="btnOpenMenuDB" Height="43" Width="137" TabIndex="7" Click="btnOpenMenuDB_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom" Canvas.Left="801" Canvas.Top="464" >Open MenuDB</Button>
                </Canvas>
            </TabItem>
            <TabItem Name="tabEvents" Header="Events" >
                <Canvas >
                    <GroupBox HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="517" Canvas.Left="325" Width="313" >
                        <GroupBox.Header>
                            <TextBlock Text="Event Information"/>
                        </GroupBox.Header>
                        <Canvas Margin="0,0,0,0" >
                            <Label Name="label_gameMode" Height="23" Width="80" TabIndex="14" HorizontalAlignment="Right" VerticalAlignment="Bottom" Canvas.Left="6" Canvas.Top="38" >Game Mode</Label>
                            <ComboBox Name="cb_gameModes" Height="23" Width="200" IsEnabled="False" TabIndex="13" HorizontalAlignment="Right" VerticalAlignment="Bottom" Canvas.Left="91" Canvas.Top="41" SelectionChanged="cb_gameModes_SelectionChanged" />
                            <CheckBox Name="checkBox_SeasonalEvent" Height="24" Width="115" TabIndex="56" HorizontalAlignment="Right" VerticalAlignment="Bottom" IsChecked="{Binding IsSeasonalEvent}" Canvas.Top="470" Canvas.Left="176" 
                                      ToolTip="Whether if the event is a Seasonal Event, if so, the event will have date requirements to enter, fill in the Start/End Dates (and additionally Ranking tab)." >Seasonal Event</CheckBox>
                            <GroupBox HorizontalAlignment="Right" VerticalAlignment="Bottom" Canvas.Left="6" Canvas.Top="412" >
                                <GroupBox.Header>
                                    <TextBlock Text="Event Stars"/>
                                </GroupBox.Header>
                                <Canvas Height="58" Width="149" >
                                    <RadioButton Name="rdoStarsThree" Height="19" Width="63" TabIndex="1" Margin="-1,30,863,507" HorizontalAlignment="Right" VerticalAlignment="Bottom" >3 Stars</RadioButton>
                                    <RadioButton Name="rdoStarsOne" Height="19" Width="57" TabIndex="0" Margin="-1,5,869,532" HorizontalAlignment="Right" VerticalAlignment="Bottom" >1 Star</RadioButton>
                                </Canvas>
                            </GroupBox>
                            <Label Name="lblRaceName" Height="24" Width="80" TabIndex="2" HorizontalAlignment="Right" VerticalAlignment="Bottom" Canvas.Left="6" Canvas.Top="11" >Event Name</Label>
                            <TextBox Name="txtEventName" Height="21" Width="200" TabIndex="3" IsEnabled="False" TextChanged="txtEventName_TextChanged" HorizontalAlignment="Right" VerticalAlignment="Bottom" TextWrapping="Wrap" Canvas.Left="91" Canvas.Top="14" />
                        </Canvas>
                    </GroupBox>
                    <Button Name="btnRemoveRace" Height="34" Width="157" TabIndex="4" IsEnabled="False" Click="btnRemoveRace_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom" Canvas.Left="163" Canvas.Top="471" >Remove Selected Event</Button>
                    <Button Name="btnAddRace" Height="34" Width="148" TabIndex="1" Click="btnAddRace_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom" Canvas.Left="10" Canvas.Top="471" >Add Event</Button>
                    <ListBox Name="lstRaces" Height="456" Width="310" TabIndex="0" HorizontalAlignment="Right" VerticalAlignment="Bottom" SelectionChanged="lstEvent_SelectedIndexChanged" Canvas.Left="10" Canvas.Top="10" />

                    <Label Name="label_imagePreview" Height="26" TabIndex="15" HorizontalAlignment="Right" HorizontalContentAlignment="Right" VerticalAlignment="Bottom" Canvas.Left="640" Canvas.Top="423" 
                           ToolTip="GT6 Only - Event Cover if the event is not in a regular folder (i.e mission/license)">Special Event Image Preview</Label>
                    <Label Name="label_imagePreviewSize" Height="29" Width="55" TabIndex="15" HorizontalAlignment="Right" HorizontalContentAlignment="Right" VerticalAlignment="Top" VerticalContentAlignment="Top" Canvas.Left="883" Canvas.Top="420" Foreground="#FF646464" FontSize="11" >432x244</Label>

                    <Button Name="btnPickImage" Height="50" Width="141" TabIndex="18" Click="btnPickImage_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom" Canvas.Left="647" Canvas.Top="454" >Pick Image</Button>
                    <Button Name="button7" Height="50" Width="130" TabIndex="17" Click="btnSaveImage_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom" Canvas.Left="808" Canvas.Top="454" >Save Image</Button>
                    <Border BorderThickness="1" BorderBrush="Gray" Canvas.Left="640" Width="298" Height="412" Canvas.Top="9">
                        <Image Name="pctImagePreview" Margin="-1,-1,-1,-1"/>
                    </Border>
                </Canvas>
            </TabItem>
            <TabItem Name="tabEventInfo" Header="Event Info" IsEnabled="False" >
                <Canvas Name="cantabEventInfo" Height="506" Width="917" >
                </Canvas>
            </TabItem>
            <TabItem Name="tabEventParams" Header="Event Settings" IsEnabled="False" >
                <Canvas >
                    <GroupBox HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="507" Width="256" Canvas.Left="682" >
                        <GroupBox.Header>
                            <TextBlock Text="Weather Parameters"/>
                        </GroupBox.Header>
                        <Canvas Height="487" Width="237" >
                            <ComboBox Name="comboBox_DecisiveWeather" Height="21" Width="102" TabIndex="37" HorizontalAlignment="Right" VerticalAlignment="Bottom" SelectionChanged="comboBox_DecisiveWeather_SelectedIndexChanged" Canvas.Left="123" Canvas.Top="399" />
                            <Label Name="label_DecisiveWeather" Height="28" Width="104" TabIndex="24" HorizontalAlignment="Right" VerticalAlignment="Bottom" Canvas.Left="7" Canvas.Top="394" >Decisive Weather</Label>

                            <Label Name="label_WeatherProgressionLength" Height="27" Width="162" TabIndex="22" HorizontalAlignment="Right" VerticalAlignment="Bottom" Canvas.Left="7" Canvas.Top="361" 
                                   ToolTip="Unknown - length of total weather progression? (XML: weather_total_sec)">Weather Progression Length</Label>
                            <xctk:IntegerUpDown Value="{Binding Path=RaceParameters.WeatherTotalSec}" Height="20" Width="51" Canvas.Left="174" Canvas.Top="365" Maximum="100000" Minimum="-1"/>

                            <Label Name="label_WeatherRandomSeed" Height="32" Width="131" TabIndex="20" HorizontalAlignment="Right" VerticalAlignment="Bottom" Canvas.Top="295" Canvas.Left="6" 
                                   ToolTip="Seed if the weather is random(XML: weather_random_seed)">Weather Random Seed</Label>
                            <xctk:IntegerUpDown Value="{Binding Path=RaceParameters.WeatherRandomSeed}" Height="20" Width="70" Canvas.Left="155" Canvas.Top="302" Maximum="100000" Minimum="-1"/>

                            <Label Name="label_WeatherTimeProgressionSpeed" Height="29" Width="148" TabIndex="18" HorizontalAlignment="Right" VerticalAlignment="Bottom" Canvas.Left="7" Canvas.Top="327" 
                                   ToolTip="Multiplier of how fast time progresses (1.0 = real-time, 60.0 = 60x (i.e. 24 minute day)) (XML: time_progress_speed)">Time Progression Speed</Label>
                            <xctk:IntegerUpDown Value="{Binding Path=RaceParameters.TimeProgressSpeed}" Height="20" Width="70" Canvas.Left="155" Canvas.Top="330" Maximum="100000" Minimum="-1"/>

                            <CheckBox Name="checkBox_RandomWeather" Height="19" Width="226" TabIndex="17" HorizontalAlignment="Right" VerticalAlignment="Bottom" Checked="checkBox_WeatherRandom_CheckedChanged" Canvas.Top="271" Canvas.Left="7"
                                      ToolTip="Forces the weather to be random or predetermined (XML: race->weather_random)">Random Weather</CheckBox>
                            <CheckBox Name="checkBox_WeatherPrecSnowOnly" Height="24" Width="81" TabIndex="16" HorizontalAlignment="Right" VerticalAlignment="Bottom" Checked="checkBox_WeatherPrecSnowOnly_CheckedChanged" Canvas.Top="242" Canvas.Left="155"
                                      ToolTip="Forces any allowed precipitation to be either rain or snow (XML: race->weather_prec_rain_only)">Only Snow Precipitation</CheckBox>
                            <CheckBox Name="checkBox_WeatherPrecRainOnly" Height="24" Width="149" TabIndex="15" HorizontalAlignment="Right" VerticalAlignment="Bottom" Checked="checkBox_WeatherPrecRainOnly_CheckedChanged" Canvas.Top="242" Canvas.Left="6" 
                                      ToolTip="Forces any allowed precipitation to be either rain or snow (XML: race->weather_prec_snow_only)">Only Rain Precipitation</CheckBox>

                            <Label Name="label_WeatherPointNum" Height="27" Width="131" TabIndex="13" HorizontalAlignment="Right" VerticalAlignment="Bottom" Canvas.Left="7" Canvas.Top="210" 
                                   ToolTip="Undocumented (XML: weather_point_num)">Weather Point Num</Label>
                            <xctk:IntegerUpDown Value="{Binding Path=RaceParameters.WeatherPointNum}" Height="20" Width="70" Canvas.Left="155" Canvas.Top="213" Maximum="100000" Minimum="-1"/>

                            <Label Name="label_WeatherChangeRate" Height="26" Width="131" TabIndex="11" HorizontalAlignment="Right" VerticalAlignment="Bottom" Canvas.Left="6" Canvas.Top="179" 
                                   ToolTip="How fast weather and water can change (XML: weather_change_rate)">Weather Change Rate</Label>
                            <xctk:IntegerUpDown Value="{Binding Path=RaceParameters.WeatherAccel}" Height="20" Width="70" Canvas.Left="155" Canvas.Top="182" Maximum="100000" Minimum="-1"/>

                            <CheckBox Name="checkBox_WeatherNoWind" Height="19" Width="104" TabIndex="10" HorizontalAlignment="Right" VerticalAlignment="Bottom" Checked="checkBox_WeatherNoWind_CheckedChanged" Canvas.Left="7" Canvas.Top="155" 
                                      ToolTip="Undocumented (XML: race->weather_no_wind)">No Wind</CheckBox>
                            <CheckBox Name="checkBox_WeatherNoSchedule" Height="24" Width="104" TabIndex="9" HorizontalAlignment="Right" VerticalAlignment="Bottom" Canvas.Left="7" Canvas.Top="126" 
                                      ToolTip="Whether or not the weather can vary (XML: race->weather_no_schedule)">No Schedule</CheckBox>
                            <CheckBox Name="checkBox_WeatherNoPrecipitation" Height="24" Width="113" TabIndex="8" HorizontalAlignment="Right" VerticalAlignment="Bottom" Checked="checkBox_WeatherNoPrecipitation_CheckedChanged" Canvas.Left="123" Canvas.Top="126" 
                                      ToolTip="Whether or not the weather can progress to rain/snow (XML: race->weather_no_precipitation)&#10;
To enable 'Realtime Weather', disable this and enable weather_prec_rain/snow_only">No Precipitation</CheckBox>

                            <Label Name="label_MinTemp" Height="26" Width="149" TabIndex="6" HorizontalAlignment="Right" VerticalAlignment="Bottom" Canvas.Left="7" Canvas.Top="95" 
                                   ToolTip="Undocumented (XML: race->weather_min_celsius)">Min Temperature (in °C)</Label>
                            <xctk:IntegerUpDown Value="{Binding Path=RaceParameters.WeatherMinCelsius}"  Height="20" Width="70" Canvas.Left="157" Canvas.Top="100" Maximum="100000" Minimum="-1"/>

                            <Label Name="label_MaxTemp" Height="23" Width="149" TabIndex="4" HorizontalAlignment="Right" VerticalAlignment="Bottom" Canvas.Left="6" Canvas.Top="67" 
                                   ToolTip="Undocumented (XML: race->weather_max_celsius)">Max Temperature (in °C)</Label>
                            <xctk:IntegerUpDown Value="{Binding Path=RaceParameters.WeatherMaxCelsius}"  Height="20" Width="70" Canvas.Left="157" Canvas.Top="70" Maximum="100000" Minimum="-1"/>

                            <Label Name="label_BaseTemp" Height="30" Width="148" TabIndex="3" HorizontalAlignment="Right" VerticalAlignment="Bottom" Canvas.Top="37" Canvas.Left="6" 
                                   ToolTip="Undocumented (XML: race->weather_base_celsius)">Base Temperature (in °C)</Label>
                            <xctk:IntegerUpDown Value="{Binding Path=RaceParameters.WeatherBaseCelsius}"  Height="20" Width="70" Canvas.Left="157" Canvas.Top="41" Maximum="100000" Minimum="-1"/>

                            <Label Name="label_StartTime" Height="26" Width="69" TabIndex="1" HorizontalAlignment="Right" VerticalAlignment="Bottom" Canvas.Left="7" Canvas.Top="6" 
                                   ToolTip="Track Time (XML: race->date)">Start Time</Label>
                            <xctk:DateTimeUpDown Value="{Binding Path=RaceParameters.Date}"  Height="22" Width="148" TabIndex="0" HorizontalAlignment="Right" VerticalAlignment="Bottom" Canvas.Left="79" Canvas.Top="8" Format="LongTime"/>
                        </Canvas>
                    </GroupBox>
                    <GroupBox HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="506" Width="677" Canvas.Top="1" >
                        <GroupBox.Header>
                            <TextBlock Text="General"/>
                        </GroupBox.Header>
                        <Canvas>
                            <CheckBox Name="checkBox_AutostartPitout" Height="24" Width="154" TabIndex="63" HorizontalAlignment="Right" VerticalAlignment="Bottom" IsChecked="{Binding RaceParameters.AutostartPitout}" Canvas.Left="501" Canvas.Top="126" 
                                      ToolTip="Undocumented (XML: race->autostart_pitout)">Autostart Pitout</CheckBox>
                            <ComboBox Name="comboBox_Flagset" Height="21" Width="168" TabIndex="62" HorizontalAlignment="Right" VerticalAlignment="Bottom" SelectionChanged="comboBox_Flagset_SelectedIndexChanged" Canvas.Left="319" Canvas.Top="181" />
                            <Label Name="label_Flagset" Height="32" Width="54" TabIndex="61" HorizontalAlignment="Right" VerticalAlignment="Bottom" Canvas.Left="260" Canvas.Top="177" 
                                   ToolTip="Undocumented (GT5 only?) (XML: race->flagset)">Flagset</Label>

                            <Label Name="label_RaceType" Height="32" Width="70" TabIndex="61" HorizontalAlignment="Right" VerticalAlignment="Bottom" Canvas.Left="260" Canvas.Top="207" 
                                   ToolTip="Undocumented - would not touch (XML: race->race_type)">Race Type</Label>
                            <ComboBox Name="comboBox_RaceType" Height="21" Width="157" TabIndex="62" HorizontalAlignment="Right" VerticalAlignment="Bottom" SelectionChanged="comboBox_RaceType_SelectedIndexChanged" Canvas.Left="330" Canvas.Top="212" />

                            <Label Name="label_MaxGhostLines" Height="24" Width="131" TabIndex="59" HorizontalAlignment="Right" VerticalAlignment="Bottom" Canvas.Left="260" Canvas.Top="148" 
                                   ToolTip="The maximum ghost lines (GT6 Seasonals) to show, if enabled. (XML: race->line_ghost_play_max)">Max Ghost Lines</Label>
                            <xctk:IntegerUpDown Name="numericUpDown_MaxGhostLines" Height="20" Width="91" Canvas.Top="153" ValueChanged="numericUpDown_MaxGhostLines_ValueChanged" Canvas.Left="396" Value="0" Maximum="16" Minimum="0"/>

                            <ComboBox Name="comboBox_LineGhostRecordType" Height="21" Width="86" TabIndex="58" HorizontalAlignment="Right" VerticalAlignment="Bottom" SelectionChanged="comboBox_LineGhostRecordType_SelectedIndexChanged" Canvas.Left="401" Canvas.Top="122" />
                            <Label Name="label_LineGhostRecordType" Height="26" Width="136" TabIndex="57" HorizontalAlignment="Right" VerticalAlignment="Bottom" Canvas.Left="260" Canvas.Top="119" 
                                   ToolTip="The way ghost lines will show, if enabled. (XML: race->line_ghost_record_type)">Line Ghost Record Type</Label>
                            <CheckBox Name="checkBox_GhostEnabled" Height="24" Width="154" TabIndex="55" HorizontalAlignment="Right" VerticalAlignment="Bottom" IsChecked="{Binding RaceParameters.WithGhost}" Canvas.Left="501" Canvas.Top="300"
                                      ToolTip="Whether to enable ghosts for the player (XML: race->with_ghost)" >Ghost On/Off</CheckBox>
                            <CheckBox Name="checkBox_ReplaceAtCourseout" Height="24" Width="154" TabIndex="55" HorizontalAlignment="Right" VerticalAlignment="Bottom" IsChecked="{Binding RaceParameters.ReplaceAtCourseout}" Canvas.Left="501" Canvas.Top="330"
                                      ToolTip="Undocumented (XML: race->replace_at_courseout)" >Replace At Course-Out</CheckBox>

                            <CheckBox Name="checkBox_OnlineOn" Height="24" Width="154" TabIndex="54" HorizontalAlignment="Right" VerticalAlignment="Bottom" IsChecked="{Binding RaceParameters.OnlineOn}" Canvas.Left="501" Canvas.Top="271" 
                                      ToolTip="Undocumented (XML: race->online_on)" >Online On</CheckBox>

                            <CheckBox Name="checkBox_PenaltyNoReset" Height="24" Width="154" TabIndex="52" HorizontalAlignment="Right" VerticalAlignment="Bottom" IsChecked="{Binding RaceParameters.PenaltyNoLevel}" Canvas.Left="501" Canvas.Top="242" 
                                      ToolTip="Undocumented (XML: race->penalty_no_level)" >Penalty No Reset</CheckBox>
                            <CheckBox Name="checkBox_BoostFlag" Height="24" Width="154" TabIndex="51" HorizontalAlignment="Right" VerticalAlignment="Bottom" IsChecked="{Binding RaceParameters.BoostFlag}" Canvas.Left="501" Canvas.Top="213" 
                                      ToolTip="Undocumented (XML: race->boost_flag)" >Boost Flag</CheckBox>
                            <CheckBox Name="checkBox_ImmediateFinish" Height="24" Width="154" TabIndex="50" HorizontalAlignment="Right" VerticalAlignment="Bottom" IsChecked="{Binding RaceParameters.ImmediateFinish}" Canvas.Left="501" Canvas.Top="184" 
                                      ToolTip="Undocumented (XML: race->immediate_finish)">Immediate Finish</CheckBox>
                            <CheckBox Name="checkBox_PaceNote" Height="24" Width="154" TabIndex="49" HorizontalAlignment="Right" VerticalAlignment="Bottom" IsChecked="{Binding RaceParameters.PaceNote}" Canvas.Left="501" Canvas.Top="155" 
                                      ToolTip="Undocumented (XML: race->pace_note)" >Pace Note</CheckBox>
                            <CheckBox Name="checkBox_CoDriver" Height="24" Width="154" TabIndex="47" HorizontalAlignment="Right" VerticalAlignment="Bottom" IsChecked="{Binding RaceParameters.AllowCoDriver}" Canvas.Left="501" Canvas.Top="97" 
                                      ToolTip="Undocumented, GT5 only (XML: race->allow_codriver)" >Allow Co-Driver</CheckBox>
                            <CheckBox Name="checkBox_Accumulation" Height="24" Width="154" TabIndex="46" HorizontalAlignment="Right" VerticalAlignment="Bottom" IsChecked="{Binding RaceParameters.Accumulation}" Canvas.Left="501" Canvas.Top="68" 
                                      ToolTip="Whether to allow Tire/Oil Wear (XML: race->accumulation)" >Oil Breakdown/Tire Wear</CheckBox>
                            <CheckBox Name="checkBox_AcademyEvent" Height="24" Width="154" TabIndex="45" HorizontalAlignment="Right" VerticalAlignment="Bottom" IsChecked="{Binding RaceParameters.AcademyEvent}" Canvas.Left="501" Canvas.Top="39"
                                      ToolTip="Undocumented (XML: academy_event)" >Academy Event</CheckBox>
                            <CheckBox Name="checkBox_DisableReplayRecord" Height="24" Width="154" TabIndex="44" HorizontalAlignment="Right" VerticalAlignment="Bottom" IsChecked="{Binding RaceParameters.DisableRecordingReplay}"  Canvas.Left="501" Canvas.Top="10" 
                                      ToolTip="If enabled, replay recording will not be available (XML: disable_recording_replay)">Disable Recording Replay</CheckBox>

                            <ComboBox Name="comboBox_SlipstreamBehavior" Height="21" Width="105" TabIndex="43" HorizontalAlignment="Right" VerticalAlignment="Bottom" SelectionChanged="comboBox_SlipstreamBehavior_SelectedIndexChanged" Canvas.Left="382" Canvas.Top="95" />

                            <Label Name="label_SlipstreamBehavior" Height="24" Width="118" TabIndex="41" HorizontalAlignment="Right" VerticalAlignment="Bottom" Canvas.Left="259" Canvas.Top="91" 
                                ToolTip="How strong slipstream is (XML: behavior_slipstream_type)">Slipstream Behavior</Label>
                            <ComboBox Name="comboBox_PenaltyLevel" Height="21" Width="116" TabIndex="40" HorizontalAlignment="Right" VerticalAlignment="Bottom" SelectionChanged="comboBox_PenaltyLevel_SelectedIndexChanged" Canvas.Left="371" Canvas.Top="68" />
                            <Label Name="label_PenaltyLevel" Height="27" Width="88" TabIndex="39" HorizontalAlignment="Right" VerticalAlignment="Bottom" Canvas.Left="260" Canvas.Top="64" 
                                   ToolTip="How severe penalties are (XML: race->penalty_level)">Penalty Level</Label>

                            <ComboBox Name="comboBox_LightingMode" Height="21" Width="116" TabIndex="38" HorizontalAlignment="Right" VerticalAlignment="Bottom" SelectionChanged="comboBox_LightingMode_SelectedIndexChanged" Canvas.Left="371" Canvas.Top="38" />
                            <Label Name="label_LightingMode" Height="27" Width="88" TabIndex="37" HorizontalAlignment="Right" VerticalAlignment="Bottom" Canvas.Left="260" Canvas.Top="35" 
                                   ToolTip="How cars behave to upcoming night (XML: race->lighting_mode)">Lighting Mode</Label>

                            <Label Name="label_GridSortType" Height="28" Width="88" TabIndex="35" HorizontalAlignment="Right" VerticalAlignment="Bottom" Canvas.Left="260" Canvas.Top="4" 
                                   ToolTip="How to sort the grid entries (XML: race->grid_sort_type)">Grid Sort Type</Label>
                            <ComboBox Name="comboBox_GridSortType" Height="21" Width="116" TabIndex="38" HorizontalAlignment="Right" VerticalAlignment="Bottom" SelectionChanged="comboBox_GridSortType_SelectedIndexChanged" Canvas.Left="371" Canvas.Top="10"/>

                            <Label Name="label_FuelConsumptionMultiplier" Height="29" Width="169" TabIndex="32" HorizontalAlignment="Right" VerticalAlignment="Bottom" Canvas.Left="6" Canvas.Top="458" 
                                   ToolTip="Whether or not, and how quickly, tires and fuel are consumed (XML: race->consume_tire)&#10;
In GT5 appears to be a bit - 1 = yes, 0 = no&#10;
In GT6 appears to be a bit - most likely a multiplier (e.g. 5 = 5x faster), 0 = off&#10;">Fuel Consumption Multiplier</Label>

                            <xctk:IntegerUpDown Name="numericUpDown_FuelConsumptionMultiplier" Height="20" Width="70" Canvas.Top="461" ValueChanged="numericUpDown_FuelConsumptionMultiplier_ValueChanged" Canvas.Left="178" Value="0"/>
                            <Label Name="label_TireConsumptionMultiplier" Height="29" Width="167" TabIndex="31" HorizontalAlignment="Right" VerticalAlignment="Bottom" Canvas.Left="6" Canvas.Top="424"
                                   ToolTip="Whether or not, and how quickly, tires and fuel are consumed (XML: race->consume_tire)&#10;
In GT5 appears to be a bit - 1 = yes, 0 = no&#10;
In GT6 appears to be a bit - most likely a multiplier (e.g. 5 = 5x faster), 0 = off&#10;">Tire Consumption Multiplier</Label>
                            <xctk:IntegerUpDown Name="numericUpDown_TireConsumptionMultiplier" Height="20" Width="70" ValueChanged="numericUpDown_TireConsumptionMultiplier_ValueChanged" Canvas.Left="178" Canvas.Top="428" Value="0"/>

                            <Label Name="label_StartingType" Height="28" Width="102" TabIndex="29" HorizontalAlignment="Right" VerticalAlignment="Bottom" Canvas.Left="6" Canvas.Top="396" 
                                   ToolTip="How the entrants start the race (XML: race->start_type) &#10;
Unknown if initial_position and initial_velocity override this&#10;
&#10;
Start types:&#10;
GRID - Entrants are sat on the starting grid, overrides custom position&#10;
ROLLING - Single-file rolling start&#10;
ROLLING_D(L/R) - Double-file rolling left&#10;

ROLLING_NOLIMIT - Rolling start, presumably at max acceleration&#10;
ROLLING2 - Rolling with custom vstart with rolling_start_v&#10;
STANDING - Standing at a certain position&#10;
ATTACK - Starts behind the grid (automatically sets the position for you unless custom via initial_position), timer starts as soon as you cross the start line/sector&#10;
COURSEINFO - Take sector information from .cinf/menudb, mainly for drift&#10;
COURSEINFO_ROLLING - Same as above but rolling, mainly for drift&#10;
&#10;
Undocumented Entries:&#10;
DISPERSED&#10;
ROLLING2&#10;
SAMEGRID&#10;
